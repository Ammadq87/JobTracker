html
    head
        title= title
        link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
    
    body

        div#navbar.d-flex.justify-content-between.border-bottom.py-2.align-items-center
            div#logo.d-flex.justify-content-start.align-items-center
                h4.mx-4.mb-0.font-italic trackr
            div#actions.d-flex.justify-content-end.align-items-center
                a.mx-4(href="/auth/login") Login Here

        div.container.border.border-secondary-subtle.mt-3
            form.container.d-flex.flex-column.p-3(action="http://localhost:3000/auth/register", method="post")
                h1 Register
                
                div.form-group
                    input(type="email", name="email", class="form-control", placeholder="Email", required)
                div.form-group
                    input(type="password", name="password", class="form-control", placeholder="Password", required)
                div.form-group
                    input(type="password", name="cPassword", class="form-control", placeholder="Confirm Password", required)
                div.form-group
                    input(type="text", name="fullName", class="form-control", placeholder="Full Name", required)
                
                button.btn.btn-primary.mt-2.mb-2(type="submit") Register
                a(href="/auth/login") Already registered?
            
                if !response
                else if response.status === 200
                    p.text-success.m-auto= response.msg
                else 
                    p.text-danger.m-auto= response.msg        
