mixin formInput(val, type, req)
    - const displayVal = val.split('_').join(' ')
    div.form-group.d-flex

        if req
            span(style="color: red;") *
            label(for=''+val style="width: 50%;")= displayVal
        else
            label(for=''+val style="width: 50%;")= displayVal

        if type.toLowerCase() === 'date'
            input(type=''+type name=val class="form-control" style="width: 50%;" required=req, value=`${new Date().toISOString().split('T')[0]}`)
        else
            input(type=''+type name=val class="form-control" style="width: 50%;" required=req)

